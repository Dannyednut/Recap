# =============================================================================
# BASE44 CONFIGURATION
# =============================================================================
BASE44_API_URL=https://app.base44.com/api/apps/YOUR_KEY
BASE44_APP_TOKEN=your_app_token

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# MAINNET: Set to "True" for production mainnet, "False" for testnet
# This single variable controls all blockchain network configurations
MAINNET=False

# =============================================================================
# RPC ENDPOINTS
# =============================================================================
# Ethereum
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_KEY
ETH_WSS_URL=wss://eth-mainnet.g.alchemy.com/v2/YOUR_KEY

# BSC (Binance Smart Chain)
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_WSS_URL=wss://bsc-ws-node.nariox.org:443

# Polygon
POLYGON_RPC_URL=https://polygon-rpc.com/
POLYGON_WSS_URL=wss://polygon-rpc.com/

# Solana
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WSS_URL=wss://api.mainnet-beta.solana.com

# =============================================================================
# WALLET CONFIGURATION
# =============================================================================
# Private Keys (NEVER commit real keys to version control)
ETH_PRIVATE_KEY=your-ethereum-private-key
BSC_PRIVATE_KEY=your-bsc-private-key
POLYGON_PRIVATE_KEY=your-polygon-private-key
SOLANA_PRIVATE_KEY=your-solana-private-key

# Wallet Addresses
ETH_WALLET_ADDRESS=your-ethereum-wallet-address
BSC_WALLET_ADDRESS=your-bsc-wallet-address
POLYGON_WALLET_ADDRESS=your-polygon-wallet-address
SOLANA_WALLET_ADDRESS=your-solana-wallet-address

# =============================================================================
# API KEYS
# =============================================================================
INFURA_API_KEY=your-infura-api-key
ALCHEMY_API_KEY=your-alchemy-api-key
ETHERSCAN_API_KEY=your-etherscan-api-key
BSCSCAN_API_KEY=your-bscscan-api-key
POLYGONSCAN_API_KEY=your-polygonscan-api-key

# Jupiter API (Solana DEX aggregator)
JUPITER_API_KEY=your-jupiter-api-key

# =============================================================================
# SECURITY
# =============================================================================
API_KEY=your-arbitrage-api-key
JWT_SECRET=your-jwt-secret-key


# =============================================================================
# GAS AND TRANSACTION SETTINGS
# =============================================================================
# Ethereum Gas Settings
ETH_MAX_GAS_PRICE_GWEI=50
ETH_GAS_PRICE_MULTIPLIER=1.1

# BSC Gas Settings
BSC_MAX_GAS_PRICE_GWEI=20
BSC_GAS_PRICE_MULTIPLIER=1.1

# Polygon Gas Settings (EIP-1559)
POLYGON_MAX_FEE_PER_GAS_GWEI=100
POLYGON_MAX_PRIORITY_FEE_GWEI=30
POLYGON_GAS_PRICE_MULTIPLIER=1.1

# =============================================================================
# DEX ARBITRAGE CONFIGURATION
# =============================================================================
# Profit Thresholds (per chain)
ETH_MIN_PROFIT_THRESHOLD=0.5
BSC_MIN_PROFIT_THRESHOLD=0.3
POLYGON_MIN_PROFIT_THRESHOLD=0.3

# Trading Limits
ETH_MAX_TRADE_SIZE=10.0
BSC_MAX_TRADE_SIZE=5.0
POLYGON_MAX_TRADE_SIZE=1000.0

# Risk Management
ETH_MAX_SLIPPAGE=0.5
BSC_MAX_SLIPPAGE=0.5
POLYGON_MAX_SLIPPAGE=0.5

# Global Settings
MIN_PROFIT_USD=10
MAX_SLIPPAGE_PERCENT=1
MAX_TRANSACTION_TIMEOUT_SEC=60

# =============================================================================
# MEMPOOL MONITORING (MEV)
# =============================================================================
ETH_MEMPOOL_MONITOR=False
BSC_MEMPOOL_MONITOR=False
POLYGON_MEMPOOL_MONITOR=False

ETH_MIN_MEV_OPPORTUNITY=100.0
BSC_MIN_MEV_OPPORTUNITY=50.0
POLYGON_MIN_MEV_OPPORTUNITY=30.0

# =============================================================================
# LOGGING AND MONITORING
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE_PATH=./arbitrage.log
ENABLE_TELEGRAM_ALERTS=True

# Telegram Notifications
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id
TELEGRAM_ALERTS_ENABLED=True

# Trading Configuration
MIN_PROFIT_THRESHOLD=0.3
MAX_TRADE_AMOUNT=1000.0

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
FLASK_HOST=0.0.0.0
FLASK_PORT=5001

# Debug
LOG_LEVEL=INFO
# =============================================================================
# NOTES
# =============================================================================
# 1. Copy this file to .env and fill in your actual values
# 2. NEVER commit .env file to version control
# 3. The MAINNET variable controls all network configurations automatically
# 4. Set MAINNET=True for production, MAINNET=False for testing
# 5. All DEX addresses and token contracts are managed centrally based on MAINNET setting